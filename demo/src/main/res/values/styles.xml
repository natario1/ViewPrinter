<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Text" parent="TextAppearance.AppCompat" >
        <item name="android:paddingLeft">12pt</item>
        <item name="android:paddingRight">12pt</item>
    </style>

    <style name="Text.Title">
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">24pt</item>
        <item name="android:layout_marginTop">24pt</item>
        <item name="android:layout_marginBottom">12pt</item>
    </style>

    <style name="Text.Subtitle">
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">italic</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?android:attr/textColorTertiary</item>
        <item name="android:textSize">13pt</item>
    </style>

    <style name="Text.Header1">
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">16pt</item>
        <item name="android:layout_marginTop">24pt</item>
    </style>


    <style name="Text.Header2">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">11.5pt</item>
        <item name="android:layout_marginTop">6pt</item>
        <item name="android:layout_marginBottom">12pt</item>
    </style>

    <style name="Text.Paragraph">
        <!-- item name="android:breakStrategy">high_quality</item -->
        <!-- item name="android:justificationMode">inter_word</item -->
        <item name="android:textIsSelectable">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">13pt</item>
        <item name="android:layout_marginTop">8pt</item>
    </style>

    <style name="Text.Paragraph.RightAlign">
        <!-- item name="android:justificationMode">none</item -->
        <item name="android:gravity">end</item>
    </style>


</resources>
